{
  "name": "routinemanager",
  "version": "1.0.0",
  "description": "Application for managing your routines.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build-mac": "electron-builder build --mac --x64",
    "build-win": "electron-builder build --win --x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rytar/RoutineManager.git"
  },
  "author": "rytar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rytar/RoutineManager/issues"
  },
  "homepage": "https://github.com/rytar/RoutineManager#readme",
  "devDependencies": {
    "@editorjs/code": "^2.7.0",
    "@editorjs/delimiter": "^1.2.0",
    "@editorjs/inline-code": "^1.3.1",
    "@editorjs/link": "^2.3.1",
    "@editorjs/list": "^1.6.2",
    "@editorjs/marker": "^1.2.2",
    "@editorjs/nested-list": "^1.0.2",
    "@editorjs/simple-image": "^1.4.1",
    "@editorjs/table": "^2.0.1",
    "@editorjs/underline": "^1.0.0",
    "@editorjs/warning": "^1.2.0",
    "electron": "^14.0.1",
    "electron-builder": "^22.11.7"
  },
  "dependencies": {
    "@editorjs/checklist": "^1.3.0",
    "@editorjs/editorjs": "^2.22.2",
    "@editorjs/header": "^2.6.1",
    "electron-store": "^8.0.1"
  },
  "build": {
    "appId": "com.electron.routinemanager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "data",
      "src",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
